<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="background_selectable_borderless">?android:attr/selectableItemBackground</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="actionBarSize">@dimen/actionbar_height</item>
    </style>

    <style name="AppThemeDayNight" parent="BaseTheme">
        <item name="toolbarTheme">@style/ToolbarStyle</item>
        <item name="toolbarPopTheme">@style/Theme.AppCompat.Light</item>

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorPrimaryBright">@color/color_primary_bright</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:colorBackground">@color/page_background</item>

        <!--文本默认色-->
        <item name="color_text_primary">@color/text_color_primary</item>

        <!--答案页面-->
        <!--AnswerActivity回答者背景-->
        <item name="color_answer_author_background">@color/answer_author_background</item>
        <!--AnswerActivity回答者字体-->
        <item name="color_answer_author_text">@color/answer_author_text</item>
        <item name="color_answer_author_sub_text">@color/answer_author_sub_text</item>
        <!--AnswerActivity问题背景色-->
        <item name="color_answer_question_title_background">
            @color/answer_question_title_background
        </item>
        <item name="color_answer_question_title_background_pressed">
            @color/answer_question_title_background_pressed
        </item>
        <!--AnswerActivity问题文字颜色-->
        <item name="color_answer_question_title_text">@color/answer_question_title_text</item>

        <!--回复页面-->
        <item name="color_reply_quote_background">@color/reply_quote_background</item>
        <item name="color_reply_quote_text">@color/reply_quote_text</item>
        <item name="color_reply_input_text">@color/reply_input_text</item>
        <item name="color_reply_hint">@color/reply_hint</item>
        <item name="color_reply_operation_bar_background">
            @color/reply_operation_bar_background
        </item>

        <!--LListView-->
        <item name="divider_color">@color/divider_color</item>
        <item name="color_llist_foot_head_text">@color/llist_foot_head_text</item>
        <item name="drawable_llist_header_button_background">@drawable/bg_header_button</item>
    </style>

    <style name="AppTheme" parent="AppThemeDayNight" />

    <style name="ToolbarTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="actionMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ToolbarStyle" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
        <item name="actionMenuTextAppearance">@style/actionMenuTextAppearance</item>
        <item name="actionModeBackground">@color/color_primary_dark</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorPrimary">@color/color_primary</item>
    </style>

    <!--MainActivity的主题-->
    <style name="BottomTheme" parent="AppTheme">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:windowBackground">@color/color_primary</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!--ImageActivity主题，黑色-->
    <style name="ImageThemeNight" parent="AppTheme">
        <item name="color_clear_page_background">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorPrimaryBright">@color/color_primary_bright</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabMode">scrollable</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabPaddingStart">10dp</item>
        <item name="tabPaddingEnd">10dp</item>
        <item name="tabMinWidth">54dp</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
