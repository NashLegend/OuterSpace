<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="SubsamplingScaleImageView">
        <attr name="src" format="reference" />
        <attr name="assetName" format="string" />
        <attr name="panEnabled" format="boolean" />
        <attr name="zoomEnabled" format="boolean" />
        <attr name="quickScaleEnabled" format="boolean" />
        <attr name="tileBackgroundColor" format="color" />
    </declare-styleable>

    <!--通用-->
    <!--ToolBar-->
    <attr name="toolbarTheme" format="reference" />
    <attr name="toolbarPopTheme" format="reference" />
    <!--主题色-->
    <attr name="colorPrimaryBright" format="color" />
    <!-- 溢出菜单-->
    <attr name="browser_icon" format="reference" />
    <attr name="eye_open_icon" format="reference" />
    <attr name="eye_closed_icon" format="reference" />
    <attr name="arrow_up_icon" format="reference" />
    <attr name="arrow_down_icon" format="reference" />
    <!--内容中含有CardView的使用color_page_background-->
    <attr name="color_page_background" format="color" />
    <!--内容中没有CardView的使用color_clear_page_background-->
    <attr name="color_clear_page_background" format="color" />
    <attr name="color_webview_background" format="color" />

    <attr name="background_selectable_borderless" format="reference" />

    <!--ToolBar Theme-->
    <attr name="theme_toolbar" format="reference" />

    <!--作者名字颜色，同时还是日期、数量等的颜色，正文列表通用-->
    <attr name="color_author_color" format="color" />

    <!--正文标题颜色-->
    <attr name="color_text_primary" format="color" />

    <!--问答-->
    <!--AnswerActivity回答者背景-->
    <attr name="color_answer_author_background" format="color" />
    <attr name="color_answer_author_text" format="color" />
    <attr name="color_answer_author_sub_text" format="color" />
    <!--AnswerActivity问题背景色-->
    <attr name="color_answer_question_title_background" format="color" />
    <attr name="color_answer_question_title_background_pressed" format="color" />
    <!--AnswerActivity问题文字颜色-->
    <attr name="color_answer_question_title_text" format="color" />

    <!--发表相关-->
    <attr name="color_reply_quote_background" format="color" />
    <attr name="color_reply_quote_text" format="color" />
    <attr name="color_reply_input_text" format="color" />
    <attr name="color_reply_hint" format="color" />
    <attr name="color_reply_operation_bar_background" format="color" />

    <!--LListView-->
    <attr name="divider_color" format="color" />
    <attr name="color_llist_foot_head_text" format="color" />
    <attr name="drawable_llist_header_button_background" format="reference" />

</resources>