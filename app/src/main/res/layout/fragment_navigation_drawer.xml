<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/color_drawer_background"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="?attr/drawable_drawer_button_background"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/image_avatar"
            android:layout_width="@dimen/list_standard_comment_avatar_dimen"
            android:layout_height="@dimen/list_standard_comment_avatar_dimen"
            android:layout_weight="0"
            android:src="@drawable/default_avatar"/>

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="@string/click_to_login"
            android:textColor="?attr/color_drawer_author"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/image_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/lightbulb"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_weight="0"
        android:background="@android:color/darker_gray"/>

    <ExpandableListView
        android:id="@+id/list_channel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:childDivider="@null"
        android:choiceMode="singleChoice"
        android:divider="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:layout_weight="0"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:id="@+id/view_switch_to_day"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_weight="0"
        android:background="?attr/drawable_drawer_button_background"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/day_mode"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/switch_to_normal_mode"
            android:textColor="?attr/color_drawer_button_text"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_switch_to_night"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_weight="0"
        android:background="?attr/drawable_drawer_button_background"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/night_mode"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/switch_to_night_mode"
            android:textColor="?attr/color_drawer_button_text"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_setting"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_weight="0"
        android:background="?attr/drawable_drawer_button_background"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/settings"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/action_settings"
            android:textColor="?attr/color_drawer_button_text"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>
