<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <net.nashlegend.sourcewall.view.common.LListView
        android:id="@+id/list_posts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/color_list_background"
        android:divider="@null"
        tools:listitem="@layout/layout_post_item_view"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false" />

    <ProgressBar
        android:id="@+id/posts_loading"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <net.nashlegend.sourcewall.view.common.LoadingView
        android:id="@+id/post_progress_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


    <FrameLayout
        android:id="@+id/layout_more_sections"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="?attr/color_shuffle_desk_background"
        android:visibility="invisible">

        <ScrollView
            android:id="@+id/plastic_scroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</RelativeLayout>