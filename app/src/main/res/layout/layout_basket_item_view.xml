<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/basket_item_height"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/list_item_padding_horizontal"
    android:paddingRight="@dimen/list_item_padding_horizontal">

    <TextView
        android:id="@+id/text_basket_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/dialog_list_text"
        tools:text="@string/sample_title" />

    <RelativeLayout
        android:layout_width="@dimen/basket_item_height"
        android:layout_height="@dimen/basket_item_height">

        <ProgressBar
            android:id="@+id/progress_adding_favor"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/button_add_2_favor"
            android:layout_width="@dimen/basket_item_height"
            android:layout_height="@dimen/basket_item_height"
            android:background="@android:color/transparent"
            android:src="@drawable/plus" />
    </RelativeLayout>

</LinearLayout>